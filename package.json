{
  "name": "otus-react",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "repository": "https://github.com/Radiophysiker/otus-react.git",
  "author": "Radiophysiker <bolshakovdmitry@bk.ru>",
  "scripts": {
    "dev": "npx webpack serve --mode development",
    "lint": "npx eslint --ext .js,.jsx,.ts,.tsx --fix ./",
    "calc": "npx ts-node src/lesson2",
    "prettier": "prettier -c src/**/*",
    "test": "npx jest",
    "build": "npx webpack --mode production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.(ts|tsx|js|jsx)": [
      "npm run lint && npm run test",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "@webpack-cli/migrate": "^1.1.2",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "browser-resolve": "^2.0.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "html-webpack-plugin": "^4.5.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.2"
  }
}
